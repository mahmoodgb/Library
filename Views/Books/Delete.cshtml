@model Book
@{
    ViewData["Title"] = "Delete Book";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
		<div>
			<h2>Are you sure you want to delete "@Model.FullTitle"?</h2>
		</div>
        <div>
            <input type="submit" value="Yes" class="btn btn-outline-primary" />
            <a asp-action="Index" class="btn btn-outline-secondary">No</a>
        </div>
    </form>    
</div>