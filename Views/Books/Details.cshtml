@model Book
@{
    ViewData["Title"] = "Book Details";
}

<h1>@ViewData["Title"]</h1>

<div>
	<div class="form-group row">
		<label asp-for="BookID"></label>
		<input asp-for="BookID" class="form-control" readonly="readonly" />
	</div>
	<div class="form-group row">
		<label asp-for="FullTitle"></label>
		<input asp-for="FullTitle" class="form-control" readonly="readonly" />
	</div>
	<div class="form-group row">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" readonly="readonly" />
	</div>
	<div class="form-group row">
		<label asp-for="Type"></label>
		<input asp-for="Type" class="form-control" readonly="readonly" />
	</div>
	<div>
		<a asp-action="Index" class="btn btn-outline-secondary">Back</a>
	</div>
</div>