@model Book
@{
    ViewData["Title"] = "Create Book";
}

<h1>@ViewData["Title"]</h1>

<div>
	<form method="post">
		<div class="form-group row">
			<label asp-for="BookID"></label>
			<input asp-for="BookID" class="form-control" />
			<span asp-validation-for="BookID" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<label asp-for="FullTitle"></label>
			<input asp-for="FullTitle" class="form-control" />
			<span asp-validation-for="FullTitle" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<label asp-for="Price"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<label asp-for="Type"></label>
			<select asp-for="Type" asp-items="@Html.GetEnumSelectList<BookType>()" class="form-control">
			</select>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>
		<input type="submit" value="Save" class="btn btn-outline-primary" />
		&nbsp;&nbsp;<a asp-action="Index">Back</a>
	</form>
	
</div>